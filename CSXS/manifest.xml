<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.example.achuanPlugin" ExtensionBundleVersion="1.0.0" ExtensionBundleName="Image Arrange" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.example.achuanPlugin.panel" Version="1.0" />
    </ExtensionList>
    <ExecutionEnvironment>
        <HostList>
            <Host Name="ILST" Version="[14.0,99.9]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="9.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    <DispatchInfoList>
        <Extension Id="com.example.achuanPlugin.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./client/index.html</MainPath>
                    <ScriptPath>./host/index.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--allow-file-access-from-files</Parameter>
                        <Parameter>--allow-file-access</Parameter>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                    <StartOn>
                    </StartOn>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Achuan-2's Plugin</Menu>
                    <Geometry>
                        <Size>
                            <Height>300</Height>
                            <Width>500</Width>
                        </Size>
                        <MinSize>
                            <Height>150</Height>
                            <Width>200</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>2000</Height>
                            <Width>2000</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>  <!-- 设置扩展面板图标；建议尺寸：24x24 与 48x48(@2X) -->
                        <Icon Type="Normal">./icons/light.png</Icon>
                        <Icon Type="RollOver">./icons/light.png</Icon>
                        <Icon Type="Normal@2x">./icons/light@2X.png</Icon>
                        <Icon Type="RollOver@2x">./icons/light@2X.png</Icon>

                        <Icon Type="DarkNormal">./icons/dark.png</Icon>
                        <Icon Type="DarkRollOver">./icons/dark.png</Icon>
                        <Icon Type="DarkNormal@2x">./icons/dark@2X.png</Icon>
                        <Icon Type="DarkRollOver@2x">./icons/dark@2X.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
    <Author>Achuan-2</Author> <!-- 作者信息-->
    <Abstract>支持图像的相对位置复制、批量调整大小、添加标签等功能。</Abstract> <!-- 扩展描述-->
</ExtensionManifest>